<div class="container">
  <div class="car-img">
    <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill, style: "display: block; margin-top: 20px;" %>
  </div>
  <div class="row mt-3">
    <div class="col-8">
      <div class="card-car">
        <div class="card-car-infos">
          <div class="d-flex justify-content-between">
            <h2><strong><%= @car.brand%>: <%= @car.model %></strong></h2>
            <h5><strong>Â¥<%= @car.rate %>/day</strong></h5>
          </div>
          <h5><%= @car.user.address %></h5>
          <div class="mt-3">
            <% description = @car.parsed_description.each do |line|%>
              <p><%= line  %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4 pr-3">
      <div class="card-form">
        <h2>Create Booking</h2>
        <%= simple_form_for [@car, @booking] do |form| %>
          <div class="mb-3">
            <%= form.input :start_date, html5: true %>
          </div>
          <div class="mb-3">
            <%= form.input :end_date, html5: true %>
          </div>
          <div class="mb-3">
            <%= form.submit "Reserve", class: 'create-form-button' %>
          </div>
        <% end %>
        <%= @booking.total_price %>
      </div>
    </div>
  </div>
</div>
